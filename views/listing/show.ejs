<% layout('/layouts/boilerplate') -%>

  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="alert alert-success">
      <%= success %>
    </div>
  <% } %>

  <% if (error && error.length) { %>
    <div class="alert alert-danger">
      <%= error %>
    </div>
  <% } %>
  
<body>
    <div class="center-wrapper">
        <div class="card-container">
            <h3>Listing Details</h3>

            <!-- Listing Image -->
            <% if (listing.image.url) { %>
                <img src=<%= listing.image.url %> alt="<%= listing.title %>" class="listing-image">
            <% } else { %>
                <img src="https://via.placeholder.com/600x300?text=No+Image+Available" alt="No Image"
                    class="listing-image">
            <% } %>

            <p>Owned By <i><%= listing.owner.username %></i></p>
            <ul class="listing-details">
                <li class="title">
                    <%= listing.title ? listing.title : "NO TITLE" %>
                </li>
                <li class="description">
                    <%= listing.description %>
                </li>
                <li class="price">&#8377; <%= listing.price.toLocaleString("en-IN") %>
                </li>
                <li class="location">
                </li>
                <li class="country">
                </li>
            </ul>
            <% if(currUser && currUser._id.equals(listing.owner._id)) {%>
            <div class="button-group">
                <a href="/listing/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>
                <form method="POST" action="/listing/<%= listing._id %>?_method=DELETE" style="display:inline;">
                    <button type="submit" class="btn btn-dark">Delete Listing</button>
                </form>
            </div>
            <% } %>
            <hr>
             <% if(currUser){ %>
            <h4 class="col-8 offset-3">Leave a Review</h4>
            <form action="/listing/<%= listing._id %>/review" method="POST" novalidate class="needs-validation">
                <!-- <div class="mb-3 ">
                    <label for="rating">Rating</label>
                    <input type="range" id="rating" name="review[rating]" min="1" max="5" required>
                </div> -->
                <div class="mb-3 ">
                 <label for="rating">Rating</label>
                 <fieldset class="starability-slot">

                    <legend>First rating:</legend>
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <br/>
                </div>
                <div class="mb-3">
                    <label for="comment">Comment</label>
                    <textarea id="comment" name="review[comment]" required></textarea>
                </div>
                
                <button class="btn btn-dark">Submit</button>
            </form>
           
             <hr>
              <% }%>
         <h4> All Reviews</h4>
         <!-- <p> <%= listing.reviews %></p> -->   
          <% for(let review of listing.reviews){ %>
         <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= review.author.username %></h5>
                <p class="card-text"><strong>Comment:</strong>
                    <%= review.comment %>
                </p>
                        <p class="starability-result" data-rating=<%= review.rating %>>
                            Rated: 3 stars
                        </p>
    
                <!-- Form inside card-body so button aligns properly -->
                <form method="POST" action="/listing/<%= listing._id %>/review/<%= review._id %>?_method=DELETE">
                    <button class="btn btn-dark btn-sm">Delete Review</button>
                </form>
            </div>
        </div>
        <% } %>


        </div>
    </div>
</body>